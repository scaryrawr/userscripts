{
  "compilerOptions": {
    // Environment setup & latest features
    // Add DOM so that Window / document / etc. are available for augmentation
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  // Include all TypeScript/TSX sources plus our ambient type folder.
  // The previous config only included the ambient file, so regular source
  // files (e.g. scripts/**) were outside the project and didn't see the augmentation.
  "include": ["types/**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
